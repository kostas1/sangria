<table id="$id" class="$class">
    #if($header)
        <thead>
            <tr>
                #foreach ($item in $header)
                    <td>$item</td>
                #end
            </tr>
        </thead>
    #end
    <tbody>
        #foreach($row in $rows)
        <tr>
            #foreach ($column in $row)
                <td>$column</td>
            #end
        </tr>
        #end
    </tbody>
</table>